        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.19</version>
          <configuration>
        <forkCount>7</forkCount>
        <reuseForks>true</reuseForks>
        <includes>
